<h1>Add a new book</h1>
<p>Create your new book here:</p>

  <%= form_for @book do |f|%>
  <%= f.label :title %>:
  <%= f.text_field :title%> <br>

  <%= f.label :description %>:
  <%= f.text_field :description %>
  <br>
  Author: <%= select("book", "author_id", Author.all.collect {|a| [ a.name, a.id] }, {include_blank: "None"}) %>
  <br>
  <p> <%= f.submit %> </p>
  <% end %>



  <p> <a href="/books">Home</a> </p>
